<%- include('partials/header'); -%>
    <h1>Compose</h1>
    <form action="/compose" method="POST">
        <div class="form-group">
            <label>Title</label>
            <input type="text" class="form-control" name="postTitle" autocomplete="off" required>
        </div>
        <div class="form-group">
            <label>Post</label>
            <textarea class="form-control" name="postBody" rows="5" required></textarea>
        </div>
        <button type="submit" class="btn btn-info">Publish</button>
    </form>
    <%- include('partials/footer'); -%>