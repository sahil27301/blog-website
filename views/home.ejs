<%- include('partials/header'); -%>
    <h1>Home</h1>
    <p>
        Welcome to our blog project. Here, you can create and view multiple blogs.
    </p>

    <div class="row">
        <div class="search-area container-fluid col-sm-6 col-md-4">
            <input type="text" placeholder="Start typing to search..." class="form-control search-input"
                disabled="disabled">
        </div>
    </div>

    <div class="row">

        <% for (const [index, post] of posts.entries()){ %>

            <div class="col-sm-6 col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title post-title">
                            <%= post.title %>
                        </h5>
                        <h5 class="card-title post-author">
                            by <%= post.user.displayName %>
                        </h5>
                        <p class="card-text content">
                            <%= truncate(post.body, 175) %>
                        </p>
                        <a href="/posts/<%= post._id %>" class="btn btn-info" style="display:block;">Read More</a>
                    </div>
                </div>
            </div>
            <% if ((index+1) % 3==0){ %>
                <div class="clearfix"></div>
                <% } %>

                    <% } %>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="/js/index.js"></script>
    <%- include('partials/footer'); -%>