<%- include('partials/header'); -%>
    <select class="form-select" aria-label="Default select example" disabled="true">
        <option selected>Choose a tag to filter by</option>
        <% tags.forEach(tag=> { %>
            <option value="<%- tag %>">
                <%- tag %>
            </option>

            <% }); %>
    </select>
    <br>
    <h2>Blogs</h2>
    <br>
    <% blogs.forEach(blog=> { %>
        <div class="blog <%- blog.tag %>">
            <h3>
                <%- blog.title %>
            </h3>
            <h5>By <%- blog.author %>
            </h5>
            <p>
                <%- blog.description %>
            </p>
            <a href="<%- blog.link %>" target="_blank">Read More</a>
            <p>
                <%- blog.likes %> likes, <%- blog.comments %> comments
            </p>
            <p>
                (Tag = <%- blog.tag %>)
            </p>
            <img src="<%- blog.image_url %>" alt="blog image" />
            <hr>
        </div>
        <% }); %>
            <script src="js/scraping.js"></script>
            <%- include('partials/footer'); -%>